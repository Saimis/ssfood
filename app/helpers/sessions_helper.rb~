module SessionsHelper
  
  def sign_in(user)
    cookies.permanent[:remember] = user.remember
    self.current_user = user
  end
  
  def current_user=(user)
    abort(user + " AAA" )
    @current_user = user
  end

  def current_user
    @current_user ||= User.find_by_remember(cookies[:remember])
  end
  
  def signed_in?
   current_user.nil?
  end

end
