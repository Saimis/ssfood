<% provide(:title, "Sign in") %>
<script>
$(document).ready(function(){
  $("#session_name").focus();
});
</script>
<h1>Prisijungti</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

