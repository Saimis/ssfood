<% if voted_users < 11 %>
  <div id="countdown">00:<%= timeleft %>:00</div>
<% end %>

<div id="restaurants_holder">
    <% @restaurants.each do |restaurant| %>
    
	<div class="single_restaurant">
	  <h1><%= restaurant.name %></h1>
	  <h4><%= restaurant.about %></h4>
	  <div><% if restaurant.waslast %><%= image_tag("last.png") %><% end %></div>
	  <div><%= restaurant.lastused %></div>
	  <div class="vote_bar_holder"> 
	    <div class="votes"><%= restaurant.votes %></div>
	    <div class="vote_bar" id="r_<%= restaurant.id %>" style=" height:<%= restaurant.votes %>0px;"></div>
	  </div>
	  <% if !signed_in? && @current_user.voted != true %>
	    <a href="dovote/<%= restaurant.id %>" >Vote</a>
	  <% end %>
	</div>
	
    <% end %>
</div>
<div style="clear:both;"></div>


<div id="user_holder">
  <% @users.each do |user| %>
    <div class="single_user_shadow">
    <div class="single_user">
      <div class="user_name" id="u_<%= user.id %>">
      	<%= user.name %>
      	 <div class="copy" title="CopyCAT!"></div>
      </div>
      <div id="uv_<%= user.id %>" style="display:none;">Voted!</div>
      <% if (!signed_in? && user.name != @current_user.name) || signed_in? %>
	<div class="food" id="uf_<%= user.id %>">
	  <%= sanitize user.food %>
	</div>
      <% else %>
	<div class="food" >
	  <% if !signed_in? && user.name == @current_user.name %>
	    <%= form_tag "savefood", :id => "food_form" do %>
	    <%= text_area_tag "food", @user.food %>
	    <!--< %= submit_tag "issaugoti" %> -->
	  <% end %>
	</div>
      <% end %>
    <% end %>
      
    </div>
    </div>
  <% end %>
</div>


