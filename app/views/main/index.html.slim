#countdown data-end=(@time)
#restaurants_holder
  - @restaurants.each do |restaurant|
    .shadow_box id=("rest_#{restaurant.id}")
      .single_restaurant
        .restaurant_name
          = restaurant.name
        .restaurant_info
          span
            = restaurant.phone
          br
          a target="_blank" href=(restaurant.about)
            | Meniu
        .winner_image
          = image_tag("last.png")
        - if !signed_in? && @current_user.voted != true
          .vote_button_holder
            a.vote_button href=("dovote/#{restaurant.id}")
            | Balsuoti!
        .vote_holder
          .votes
            = restaurant.votes
          .vote_bar style="height:#{restaurant.votes}0px;"

        - if restaurant.lastused.length > 0
          .last_time
            | Pask. k. u&#382;sk:
            | &nbsp;
            = restaurant.lastused[0..-16]

div style="clear:both;"

#user_holder
  - @users.each do |user|
    .shadow_box
      .single_user id="usr_(user.id)"
        .user_name
          span.user_name_activefield
            = user.name
          .copy title="CopyCAT!"
          .voted title="Balsavo" style="display:none;"
            = image_tag("voted.png")

        - if (!signed_in? && user.name != @current_user.name) || signed_in?
          .food id=("uf_#{user.id}")
            = user.food
        - else
          .food
            - if !signed_in? && user.name == @current_user.name
              = form_tag "savefood", :id => "food_form" do
                = text_area_tag "food", @user.food
