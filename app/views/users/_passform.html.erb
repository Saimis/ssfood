<%= form_for @user do |f|  %>
<div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :required => true %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, :required => true %>
  </div>
   <%= f.hidden_field :id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>