<!DOCTYPE html>
<html>
<head>
  <title>FoodApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "/javascripts/jquery.jqplot.min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "/javascripts/jqplot.pieRenderer.min.js", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div class="controls">
  <% if signed_in? %>
    <%= link_to "Log in", log_in_path %>
  <% else %>
    <%= link_to "Log out", log_out_path %> |
    <% if @current_user.name == 'admin' %> 
        <a href="admin">To admin panel</a> |
        <a href="/">To main window</a> |
        <a href="stats/amount">To amounts</a>
    <% else %>
      <a href="changepass"><%= @current_user.name %></a> |
      <a href="stats">Stats</a>
    <% end %>
  <% end %>
</div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
<%= yield %>
</body>
</html>
